<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bititpoikittain.mobiilimatkustaminen.StartTripActivity">

    <TextView
        android:text="Trip ended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tripEnded"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Your last trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastTripHeading"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="74dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/tripEnded"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Train E from LeppÃ¤vaara to Helsinki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tripDesc"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/lastTripHeading"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="1.11.2016  18:33 - 18:48"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tripTime"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tripDesc"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Show all trips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/showAllTrips" />

</RelativeLayout>